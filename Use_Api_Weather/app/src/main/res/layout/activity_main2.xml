<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="597dp">

            <LinearLayout
                android:id="@+id/tabOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FF0000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/yogiyo_logo"
                    android:layout_marginBottom="20dp"/>



                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal">
                            <ImageView android:id="@+id/chick"
                                android:layout_width="240dp"
                                android:layout_height="120dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/chicken2"
                                android:layout_gravity="left"
                                android:onClick="onClick"/>
                            <TextView android:id="@+id/chick2"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:text="치 킨"
                                android:textSize="70dp"
                                android:gravity="center"
                                android:onClick="onClick"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal">
                            <ImageView android:id="@+id/piz"
                                android:layout_width="240dp"
                                android:layout_height="120dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/pizza"/>
                            <TextView android:id="@+id/piz2"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:text="피 자"
                                android:textSize="70dp"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal">
                            <ImageView android:id="@+id/leg"
                                android:layout_width="240dp"
                                android:layout_height="120dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/pigleg" />
                            <TextView android:id="@+id/leg2"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:text="족 발"
                                android:textSize="70dp"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal">
                            <ImageView android:id="@+id/kor"
                                android:layout_width="240dp"
                                android:layout_height="120dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/korean" />
                            <TextView android:id="@+id/kor2"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:text="한 식"
                                android:textSize="70dp"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal">
                            <ImageView android:id="@+id/china"
                                android:layout_width="240dp"
                                android:layout_height="120dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/chinese" />
                            <TextView android:id="@+id/china2"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:text="중 식"
                                android:textSize="70dp"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal">
                            <ImageView android:id="@+id/jap"
                                android:layout_width="240dp"
                                android:layout_height="120dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/japanese" />
                            <TextView android:id="@+id/jap2"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:text="일 식"
                                android:textSize="70dp"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal">
                            <ImageView android:id="@+id/dduck"
                                android:layout_width="240dp"
                                android:layout_height="120dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/dduck" />
                            <TextView android:id="@+id/dduck2"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:text="분  식"
                                android:textSize="70dp"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:orientation="horizontal">
                            <ImageView android:id="@+id/night"
                                android:layout_width="240dp"
                                android:layout_height="120dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/nightfood" />
                            <TextView android:id="@+id/night2"
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:text="야 식"
                                android:textSize="70dp"
                                android:gravity="center"/>
                        </LinearLayout>
                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal">
                        <ImageView android:id="@+id/disert"
                            android:layout_width="240dp"
                            android:layout_height="120dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/dessert" />
                        <TextView android:id="@+id/disert2"
                            android:layout_width="fill_parent"
                            android:layout_height="match_parent"
                            android:text="디저트"
                            android:textSize="60dp"
                            android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:completionHint="선택하세요"
                    android:completionThreshold="5"
                    android:hint="음식점이나 메뉴명으로 검색하세요." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">

                    </LinearLayout>
                </ScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF0000"
                    android:gravity="center_horizontal"
                    android:text="회원 주문내역"
                    android:textSize="30dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tabFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF0000"
                    android:gravity="center_horizontal"
                    android:text="마이요기요"
                    android:textSize="30dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="닉네임을 설정해주세요.         >"
                    android:textSize="30dp"
                    android:textStyle="bold"></Button>
            </LinearLayout>
        </FrameLayout>
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="60dp"></TabWidget>
    </LinearLayout>
</TabHost>